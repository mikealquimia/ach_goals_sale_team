<odoo>
  <data>

    <record model="ir.ui.view" id="ach_goals_crm_team_form">
      <field name="name">Goals CRM Team Form</field>
      <field name="model">crm.team</field>
      <field name="inherit_id" ref="sale.crm_team_salesteams_view_form"/>
      <field name="type">form</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoiced_target']" position="replace">
          <div attrs="{'invisible': [('use_invoices', '=', False)]}">
            <group>
              <field name="currency_id" invisible='1'/>
              <label for="quotation_target"/>
              <div class="o_row">
                <field name="quotation_target" widget="monetary"/>
                 / Now:<field name="quotations_amount" widget="monetary" decoration-danger="(quotations_amount/quotation_target)&lt;0.8 and (quotations_amount/quotation_target)&gt;=0" decoration-info="(quotations_amount/quotation_target)&lt;1 and (quotations_amount/quotation_target)&gt;=0.8" decoration-success="quotation_target&lt;=quotations_amount"/>
              </div>
              <label for="sale_target"/>
              <div class="o_row">
                <field name="sale_target"  widget="monetary"/>
                 /Now:<field name="sales_amount"  widget="monetary" decoration-danger="(sales_amount/sale_target)&lt;0.8 and (sales_amount/sale_target)&gt;=0" decoration-info="(sales_amount/sale_target)&lt;1 and (sales_amount/sale_target)&gt;=0.8" decoration-success="sale_target&lt;=sales_amount"/>
              </div>
              <label for="invoice_target"/>
              <div class="o_row">
                <field name="invoice_target"  widget="monetary"/>
                 /Now:<field name="invoices_amount"  widget="monetary" decoration-danger="(invoices_amount/invoice_target)&lt;0.8 and (invoices_amount/invoice_target)&gt;=0" decoration-info="(invoices_amount/invoice_target)&lt;1 and (invoices_amount/invoice_target)&gt;=0.8" decoration-success="invoice_target&lt;=invoices_amount"/>
              </div>
              <label for="payment_target"/>
              <div class="o_row">
                <field name="payment_target"  widget="monetary"/>
                 /Now:<field name="payments_amount"  widget="monetary" decoration-danger="(payments_amount/payment_target)&lt;0.8 and (payments_amount/payment_target)&gt;=0" decoration-info="(payments_amount/payment_target)&lt;1 and (payments_amount/payment_target)&gt;=0.8" decoration-success="payment_target&lt;=payments_amount"/>
              </div>
            </group>
          </div>
          </xpath>
      </field>
    </record>

    <record model="ir.ui.view" id="ach_goals_crm_team_kanban">
      <field name="name">Goals CRM Team Kanban</field>
      <field name="model">crm.team</field>
      <field name="inherit_id" ref="sales_team.crm_team_salesteams_view_kanban"/>
      <field name="type">kanban</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='invoiced_target']" position='after'>
          <field name="quotation_target"/>
          <field name="sale_target"/>
          <field name="invoice_target"/>
          <field name="payment_target"/>
        </xpath>
        <xpath expr="//t[@groups='sales_team.group_sale_manager']" position="replace">
          <t t-if="record.use_invoices.raw_value &amp;&amp; record.quotation_target.raw_value" class="col-12 o_kanban_primary_bottom">
            <field name="quotations_amount" widget="progressbar" title="Quotations" options="{'current_value': 'quotations_amount', 'max_value': 'quotation_target'}"/>
          </t>
          <t t-if="record.use_invoices.raw_value &amp;&amp; record.sale_target.raw_value" class="col-12 o_kanban_primary_bottom">
            <field name="sales_amount" widget="progressbar" title="Sales" options="{'current_value': 'sales_amount', 'max_value': 'sale_target'}"/>
          </t>
          <t t-if="record.use_invoices.raw_value &amp;&amp; record.invoice_target.raw_value" class="col-12 o_kanban_primary_bottom">
            <field name="invoices_amount" widget="progressbar" title="Invoices" options="{'current_value': 'invoices_amount', 'max_value': 'invoice_target'}"/>
          </t>
          <t t-if="record.use_invoices.raw_value &amp;&amp; record.payment_target.raw_value" class="col-12 o_kanban_primary_bottom">
            <field name="payments_amount" widget="progressbar" title="Payments" options="{'current_value': 'payments_amount', 'max_value': 'payment_target'}"/>
          </t>
        </xpath>
      </field>
    </record>

  </data>
</odoo>